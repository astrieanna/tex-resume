% set margins

% plain resume offset values
\newlength{\voffsethead}
\newlength{\voffsetfoot}
\newlength{\hoffsetleft}
\newlength{\hoffsetright}

\setlength{\voffsethead}{0.7in}
\setlength{\voffsetfoot}{0.7in}
\setlength{\hoffsetleft}{0.9in}
\setlength{\hoffsetright}{1.0in}

\setlength{\voffset}{\voffsethead}
\addtolength{\voffset}{-1in}
\setlength{\hoffset}{\hoffsetleft}
\addtolength{\hoffset}{-1in}

% set header spaces
\setlength{\topmargin}{0in}
\setlength{\headheight}{22pt}
\setlength{\headsep}{12pt}

% set footer spaces
\setlength{\footskip}{11pt}

% set margins
\setlength{\oddsidemargin}{0pt}
\setlength{\evensidemargin}{0pt}

% set textwidth 
\setlength{\textwidth}{\paperwidth}
\addtolength{\textwidth}{-\hoffsetleft}
\addtolength{\textwidth}{-\hoffsetright}

% set textheight
\setlength{\textheight}{\paperheight}
\addtolength{\textheight}{-\voffsethead}
\addtolength{\textheight}{-\voffsetfoot}
\addtolength{\textheight}{-\headheight}
\addtolength{\textheight}{-\headsep}
